<Page x:Class="TaskManager.login.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.login"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Welcome">

    <Grid Background="#b0d8ff">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <Label Content="Task Manager" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="45" Foreground="#0b1b5b" FontWeight="Bold" FontFamily="Times new Roman"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Height="30">
            <Button Width="100" Height="30" Content="LOG IN" Margin="0,0,15,0" FontWeight="Bold" FontFamily="Arial" FontSize="14" Click="button_LogIn" Background="#c9d9ff"></Button>
            <Button Width="100" Height="30" Content="SIGN UP" Margin="15,0,0,0" FontWeight="Bold" FontFamily="Arial" FontSize="14" Click="button_SignUp" Background="#c9d9ff"></Button>
        </StackPanel>
        
    </Grid>
</Page>
